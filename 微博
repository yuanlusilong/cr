    <script>
        // 简单的交互功能
        document.querySelectorAll('.action i').forEach(icon => {
            icon.addEventListener('click', function() {
                // 切换点赞状态
                if (this.classList.contains('fa-heart')) {
                    this.classList.toggle('far');
                    this.classList.toggle('fas');
                    this.classList.toggle('liked');
                    
                    if (this.classList.contains('liked')) {
                        this.style.color = '#e0245e';
                    } else {
                        this.style.color = '#657786';
                    }
                }
                
                // 切换评论/转发状态
                if (this.classList.contains('fa-comment') || 
                    this.classList.contains('fa-retweet')) {
                    this.classList.toggle('active-action');
                    
                    if (this.classList.contains('active-action')) {
                        this.style.color = '#1da1f2';
                    } else {
                        this.style.color = '#657786';
                    }
                }
            });
        });
        
        // 发布按钮点击效果
        document.querySelector('.compose-button').addEventListener('click', function() {
            alert('发布新微博功能');
        });
    </script>
